<div class="container max-w-4xl mx-auto mt-10 px-4">
  <div class="flex justify-between gap-2 mb-4">
    <h1 class="flex items-center text-2xl font-semibold text-gray-800">Backtest Results for <span class="px-1 text-blue-600"><%= @backtest.stock.ticker %></span></h1>
    <div class="flex flex-wrap gap-2 items-center justify-start">
      <%= link_to 'Home', root_path, class: 'inline-block bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md shadow-sm transition' %>
    </div>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 border border-gray-200 text-sm text-gray-700 bg-white rounded-md shadow-md p-6 mb-6">
    <div><strong>Start Date:</strong> <%= @backtest.start_date %></div>
    <div><strong>End Date:</strong> <%= @backtest.end_date || (@backtest.start_date + 30) %></div>
    <div><strong>Invested Amount:</strong> ₹<%= precision_inr(@result[:invested_amount]) %></div>
    <div><strong>Final Portfolio Value:</strong> ₹<%= precision_inr(@result[:portfolio]) %>
      <% if @result[:active_buys].present?%>
        <%= render "tooltip", tooltip_id: "tooltip-unsold", message: "Transaction Date: #{@result[:active_buys].pluck(:date).join(",\n ")}" %>
      <% end %>
    </div>
    <div>
      <strong>Profit/Loss:</strong>
      <span class="<%= @result[:profit_loss] >= 0 ? 'text-green-600 font-semibold' : 'text-red-600 font-semibold' %>">
        ₹<%= precision_inr(@result[:profit_loss]) %>
      </span>
    </div>
    <div><strong>Final Shares:</strong> <%= @result[:final_shares] %></div>
    <div><strong>Total Charges:</strong> ₹<%= precision_inr(@result[:charges]) %></div>
    <% if @result[:unrealized_pl] != 0 %>
      <div><strong>Unrealized Profit/Loss:</strong> ₹<%= precision_inr(@result[:unrealized_pl]) %></div>
    <% end %>
  </div>

  <h3 class="text-l font-semibold flex justify-center text-gray-800">Ladder Strategy</h2>
  <h2 class="text-xl font-semibold text-gray-800 mb-3">Transactions</h2>

  <% if @result[:transactions].empty? %>
    <div class="text-gray-500 italic mb-6">No transactions recorded.</div>
  <% else %>
    <div class="overflow-x-auto shadow rounded-md">
      <table class="min-w-full divide-y border border-gray-200 divide-gray-200 bg-white rounded-md">
        <thead class="bg-gray-200">
          <tr>
            <th class="text-left px-4 py-2 text-sm font-semibold text-gray-600"> </th>
            <th class="text-left px-4 py-2 text-sm font-semibold text-gray-600">Date</th>
            <th class="text-left px-4 py-2 text-sm font-semibold text-gray-600">Type</th>
            <th class="text-left px-4 py-2 text-sm font-semibold text-gray-600">Price</th>
            <th class="text-left px-4 py-2 text-sm font-semibold text-gray-600">Quantity</th>
            <th class="text-left px-4 py-2 text-sm font-semibold text-gray-600">Amount</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200 text-sm text-gray-700">
          <% @result[:transactions].each_with_index do |txn, i| %>
            <tr class="hover:bg-gray-100 transition">
              <td class="px-4 py-2"><%= i+1 %></td>
              <td class="px-4 py-2"><%= txn.date %></td>
              <td class="px-4 py-2 capitalize"><%= txn.kind %></td>
              <td class="px-4 py-2"><%= precision_inr(txn.price) %></td>
              <td class="px-8 py-2"><%= txn.quantity %></td>
              <td class="px-4 py-2">
                <% amt = precision_inr(txn.amount) %>
                <% if txn.sell? %>
                  <span class="text-red-600 font-medium"><%= amt %></span>
                <% else %>
                  <span class="text-green-700"><%= amt %></span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>

  <div class="mt-6">
    <%= link_to '← Run New Backtest', new_backtests_ladder_path, class: 'inline-block bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md shadow-sm transition' %>
  </div>
</div>
