<div class="container max-w-4xl mx-auto mt-10 px-4">
  <div class="flex justify-between gap-2 mb-4">
    <h1 class="flex items-center text-2xl font-semibold gap-2 text-gray-800">Backtest Results for <span class="text-blue-600"><%= @result[:stock_names] %></span></h1>
    <div class="flex flex-wrap items-center justify-center">
      <%= link_to "Home", root_path, class: "inline-block bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md shadow-sm transition" %>
      <%= link_to "←", ipo_stock_index_path, title: "Back", class: "text-blue-700 text-3xl" %>
    </div>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 border border-gray-200 text-sm text-gray-700 bg-white rounded-md shadow-md p-6 mb-6">
    <div><strong>Start Date:</strong> <%= @ipo_stock.start_date %></div>
    <div><strong>End Date:</strong> <%= @ipo_stock.end_date || (@ipo_stock.start_date + 30) %></div>
    <div><strong>First Buy at:</strong> <%= precision_inr(@ipo_stock.first_buy_percentage, precision: 0) %>%</div>
    <div><strong>Buy Dip at:</strong> <%= precision_inr(@ipo_stock.buy_dip_percentage, precision: 0) %>%</div>
    <div><strong>Sell at:</strong> <%= precision_inr(@ipo_stock.sell_profit_percentage, precision: 0) %>%</div>
    <div><strong>Initial amount:</strong> <%= precision_inr(@ipo_stock.investment_amount, precision: 0) %></div>
    <div><strong>Max Buy amount:</strong> <%= precision_inr(@ipo_stock.maximum_buy_amount, precision: 0) %></div>
    <div><strong>Invested Amount:</strong> ₹<%= precision_inr(@result[:invested_amount]) %></div>
    <div><strong>Portfolio Value:</strong> ₹<%= precision_inr(@result[:portfolio]) %></div>
    <div><strong>Unrealized P&L:</strong> <%= precision_inr(@result[:u_pnl]) %> (<%= precision_inr(@result[:u_pnl_per]) %>%)</div>
    <div><strong>Realized P&L:</strong> <%= precision_inr(@result[:pnl]) %> (<%= precision_inr(@result[:pnl_per]) %>%)</div>
    <div><strong>Shares:</strong> <%= @result[:final_shares] %></div>
    <div><strong>Charges:</strong> ₹<%= precision_inr(@result[:charges]) %> (<%= precision_inr(@result[:charges_per]) %>%)</div>
    <div><strong>Max Amount Invested:</strong> ₹<%= precision_inr(@result[:max_amount_invested], precision: 0) %></div>
    <div><strong>Released:</strong> ₹<%= precision_inr(@result[:remains]) %></div>
    <div><strong>Total Amount:</strong> ₹<%= precision_inr(@result[:total_amount]) %></div>
  </div>

  <div class="p-2 mb-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <% @result[:portfolio_data].each do |item| %>
      <div class="hover:bg-gray-100 border border-gray-200 shadow-lg rounded-2xl p-4">
        <h2 class="text-2xl font-bold text-gray-700 mb-4 text-center">
          <%= item[:stock][:ticker] %>
        </h2>
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 mb-1 text-sm">
          <div class="p-3 bg-gray-50 rounded-lg text-center">
            <p class="text-gray-500 text-xs uppercase tracking-wide">P&L</p>
              <% growth = item[:pnl]%>
            <p class="<%= growth >= 0 ? "text-green-700" : "text-red-700" %>  text-lg font-semibold">
              <%= precision_inr(item[:pnl]).presence  || "N/A" %>
            </p>
          </div>
          <div class="p-3 bg-gray-50 rounded-lg text-center">
            <p class="text-gray-500 text-xs uppercase tracking-wide">Return</p>
            <p class="text-lg font-semibold text-blue-700">
              <%= item[:pnl_per] %>%
            </p>
          </div>
          <div class="p-3 bg-gray-50 rounded-lg text-center">
            <p class="text-gray-500 text-xs uppercase tracking-wide">Charges</p>
            <p class="text-lg font-semibold text-red-600">
              <%= precision_inr(item[:charges]).presence  || "N/A" %>
            </p>
          </div>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 mb-1 text-sm">
          <div class="p-3 bg-gray-50 rounded-lg text-center">
            <p class="text-gray-500 text-xs uppercase tracking-wide">Invested</p>
            <p class="text-lg font-semibold text-purple-700">
              <%= precision_inr(item[:invested_amount]).presence  || "N/A" %>
            </p>
          </div>
          <div class="p-3 bg-gray-50 rounded-lg text-center">
            <p class="text-gray-500 text-xs uppercase tracking-wide">Final Shares</p>
            <p class="text-lg font-semibold text-blue-700">
              <%= item[:final_shares] %>
            </p>
          </div>
          <div class="p-3 bg-gray-50 rounded-lg text-center">
            <p class="text-gray-500 text-xs uppercase tracking-wide">Portfolio</p>
            <p class="text-lg font-semibold text-green-700">
              <%= precision_inr(item[:portfolio]).presence  || "N/A" %>
            </p>
          </div>
        </div>
        </div>
      <% end %>
    </div>
  </div>

  <h3 class="text-l font-semibold flex justify-center text-gray-800">Fix Buy and Sell %</h2>
  <h2 class="text-xl font-semibold text-gray-800 mb-3">Transactions</h2>
    <% @result[:portfolio_data].each do |item| %>
    <% if item[:transactions].empty? %>
      <div class="text-gray-500 italic mb-6">No transactions recorded.</div>
    <% else %>
      <div class="overflow-x-auto shadow rounded-md">
        <table class="min-w-full divide-y border border-gray-200 divide-gray-200 bg-white rounded-md">
          <thead class="bg-gray-200">
            <tr>
              <th class="text-left px-4 py-2 text-sm font-semibold text-gray-600">Sr.</th>
              <th class="text-left px-4 py-2 text-sm font-semibold text-gray-600">Date</th>
              <th class="text-left px-4 py-2 text-sm font-semibold text-gray-600">Name</th>
              <th class="text-left px-4 py-2 text-sm font-semibold text-gray-600">Type</th>
              <th class="text-left px-4 py-2 text-sm font-semibold text-gray-600">Price</th>
              <th class="text-left px-4 py-2 text-sm font-semibold text-gray-600">Quantity</th>
              <th class="text-left px-4 py-2 text-sm font-semibold text-gray-600">Trade Amount</th>
              <th class="text-left px-4 py-2 text-sm font-semibold text-gray-600">Stock Balance</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200 text-sm text-gray-700">
            <% item[:transactions].each_with_index do |txn, i| %>
              <tr class="hover:bg-gray-100 transition">
                <td class="px-4 py-2"><%= i+1 %></td>
                <td class="px-4 py-2"><%= txn[:date] %></td>
                <td class="px-4 py-2"><%= txn[:symbol] %></td>
                <td class="px-4 py-2 capitalize"><%= txn[:type] %></td>
                <td class="px-4 py-2"><%= txn[:price] %></td>
                <td class="px-8 py-2"><%= txn[:quantity] %></td>
                <td class="px-4 py-2">
                  <% amt = precision_inr(txn[:amount]) %>
                  <% if txn[:type] == "sell" %>
                    <span class="text-red-600 font-medium"><%= amt %></span>
                  <% else %>
                    <span class="text-green-700">-<%= amt %></span>
                  <% end %>
                </td>
                <td class="px-8 py-2"><%= txn[:stock_amount] %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </br>
  </br>

    <% end %>
  <% end %>
    </br>
    </br>
  <h2 class="text-xl font-semibold text-gray-800 mb-3">Transactions</h2>

  <% if @result[:transactions].empty? %>
    <div class="text-gray-500 italic mb-6">No transactions recorded.</div>
  <% else %>
    <div class="overflow-x-auto shadow rounded-md">
      <table class="min-w-full divide-y border border-gray-200 divide-gray-200 bg-white rounded-md">
        <thead class="bg-gray-200">
          <tr>
            <th class="text-left px-4 py-2 text-sm font-semibold text-gray-600">Sr.</th>
            <th class="text-left px-4 py-2 text-sm font-semibold text-gray-600">Date</th>
            <th class="text-left px-4 py-2 text-sm font-semibold text-gray-600">Name</th>
            <th class="text-left px-4 py-2 text-sm font-semibold text-gray-600">Type</th>
            <th class="text-left px-4 py-2 text-sm font-semibold text-gray-600">Price</th>
            <th class="text-left px-4 py-2 text-sm font-semibold text-gray-600">Quantity</th>
            <th class="text-left px-4 py-2 text-sm font-semibold text-gray-600">Trade Amount</th>
            <th class="text-left px-4 py-2 text-sm font-semibold text-gray-600">Total Balance</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200 text-sm text-gray-700">
          <% @result[:transactions].each_with_index do |txn, i| %>
            <tr class="hover:bg-gray-100 transition">
              <td class="px-4 py-2"><%= i+1 %></td>
              <td class="px-4 py-2"><%= txn[:date] %></td>
              <td class="px-4 py-2"><%= txn[:symbol] %></td>
              <td class="px-4 py-2 capitalize"><%= txn[:type] %></td>
              <td class="px-4 py-2"><%= txn[:price] %></td>
              <td class="px-8 py-2"><%= txn[:quantity] %></td>
              <td class="px-4 py-2">
                <% amt = precision_inr(txn[:amount]) %>
                <% if txn[:type] == "sell" %>
                  <span class="text-red-600 font-medium"><%= amt %></span>
                <% else %>
                  <span class="text-green-700">-<%= amt %></span>
                <% end %>
              </td>
              <td class="px-8 py-2"><%= txn[:remains] %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>

  <div class="mt-6">
    <%= link_to "← Run New Backtest", ipo_stock_index_path, class: "inline-block bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md shadow-sm transition" %>
  </div>
</div>
